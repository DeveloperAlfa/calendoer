<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/cool"
    tools:context="me.developeralfa.calendoer_calendarandtodo.DetailsForm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="First name"
            android:maxLines="1"
            android:layout_marginLeft="35dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:id="@+id/fName"
            android:background="@drawable/edit_warm"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Last name"
            android:layout_marginLeft="35dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:layout_marginRight="35dp"
            android:id="@+id/lName"
            android:background="@drawable/edit_warm"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="--------------------------"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="I wake up at"
            android:layout_marginLeft="35dp"

            android:textSize="18dp"
            android:layout_weight="0.7"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:id="@+id/Wake"

            android:text="7:00 "
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_cool"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="AM"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="35dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/button_cool"
            android:fontFamily="monospace"
            android:text="Calendo it!"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textSize="18dp"
            android:id="@+id/formButton"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"/>


    </LinearLayout>



</LinearLayout>
