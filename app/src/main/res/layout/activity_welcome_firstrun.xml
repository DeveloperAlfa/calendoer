<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cool"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    tools:context="me.developeralfa.calendoer_calendarandtodo.Welcome_firstrun">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to "
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="35dp"
        android:fontFamily="serif-monospace"
        android:gravity=""/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Calendoer!"
        android:textSize="55dp"
        android:textColor="@color/white"
        android:layout_marginLeft="35dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Staying Organised starts today!"
        android:textSize="18dp"
        android:layout_marginTop="200dp"
        android:textColor="@color/white"
        android:layout_marginLeft="35dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:text="Get me Going!"
        android:id="@+id/go"
        android:textColor="@color/white"
        android:background="@drawable/button_cool"/>


</LinearLayout>
